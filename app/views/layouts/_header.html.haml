.header.larger
  - if user_signed_in?
    %button.drawer-toggle.drawer-hamburger.header_humberger.visible-xs{type: "button"}
      %span.sr-only toggle navigation
      %span.drawer-hamburger-icon
    %nav.drawer-nav.header_humberger_list.visible-xs{role: "navigation"}
      %ul.drawer-menu
        %li 
          = link_to root_path, class: "sidebar-list-item #{"active" if current_page?(root_path)}", 'data-no-turbolink' => true do
            .sidebar_icon
              %i.fa.fa-list-ul{"aria-hidden" => "true"}
            %span Reservations
    .logo.logo_where_header
      %a{:href => "/"}
        %img.logo__img{src: "/logo.png"}
    %ul.user-area.user-area_where_header
      %li.user_info.user-area__list.dropdown.hidden-xs
        %a#dropdownMenu1.dropdown__toggle{"data-toggle" => "dropdown", :href => "#"}
          = current_user.name
          %span.caret
        %ul.dropdown-menu.dropdown__content{"aria-labelledby" => "dropdownMenu1"}
          %li= link_to "Channel", root_path
          %li.dropdown__divider
          %li
            = link_to "Log out", destroy_user_session_path, method: "delete"
      %li.user-area__list.user-area__list_content_button.hidden-xs
        = link_to 'New Post', new_post_path, class: "user-area__button button"
  - else
    %button.drawer-toggle.drawer-hamburger.header_humberger.visible-xs{type: "button"}
      %span.sr-only toggle navigation
      %span.drawer-hamburger-icon
    %nav.drawer-nav.header_humberger_list.visible-xs{role: "navigation"}
      %ul.drawer-menu
        %li 
          = link_to root_path, class: "sidebar-list-item #{"active" if current_page?(root_path)}", 'data-no-turbolink' => true do
            .sidebar_icon
              %i.fa.fa-list-ul{"aria-hidden" => "true"}
            %span Reservations
    .logo.logo_where_header
      %a{:href => "/"}
        %img.logo__img{src: "/logo.png"}
    %ul.user-area.user-area_where_header
      %li.user-area__list.user-area__list_content_button.hidden-xs
        = link_to 'Sign In', new_user_session_path, class: "user-area__button button"

